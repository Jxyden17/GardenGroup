@model GardenGroup.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h1>Delete Ticket</h1>

<h3>Are you sure you want to delete this ticket?</h3>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Prioriteit
        </dt>
        <dd class="col-sm-10">
            @Model.Prioriteit
        </dd>
        <dt class="col-sm-2">
            Creator
        </dt>
        <dd class="col-sm-10">
            @Model.Creator
        </dd>
        <dt class="col-sm-2">
            Datum open
        </dt>
        <dd class="col-sm-10">
            @Model.Datum_open
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>